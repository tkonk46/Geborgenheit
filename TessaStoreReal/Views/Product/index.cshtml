

@model TessaStoreReal.Models.Product
@{
    ViewBag.Title = "Index";
}
<body class="shop">
    <div class="well">
<h2 class="header text-center product-name"> @Model.Name</h2>
<div class="row">
    <div class="col-md-1"></div>
    <div class="col-xs-6 col-md-4">
       <img class="product-detail"src=/@Model.ImageUrl alt="Product Image">
    </div>
    <div class="col-md-1"></div>
    <div class="col-xs-6 col-md-4">
        <h3> @Model.Description </h3>
        <h3>Price: @Model.Price.Value.ToString("C")</h3>
    </div>
        <div class="col-md-2"></div>
    </div>

@using (Html.BeginForm())
{
    <fieldset>
        <legend>
            Purchase
        </legend>
        <div class="form-group">
            @Html.LabelFor(m => m.Quantity, new { @class = "body" })
            @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control prod-quan" })
        </div>
    </fieldset>
    @Html.HiddenFor(m => m.Price)
    @Html.HiddenFor(m => m.Type)
    @Html.HiddenFor(m => m.ID)
    @Html.HiddenFor(m => m.Name)
<input type="submit" class="btn btn-primary" value="Add Product to Cart"/>
}
  </div>
</body>
